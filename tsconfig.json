{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "baseUrl": ".",
  },
  "include": [
    "src"
  ]
}